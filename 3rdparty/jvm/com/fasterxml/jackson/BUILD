# In Sync with Finatra's version.
VERSION = '2.8.4'

jar_library(
  name='core',
  jars=[jar('com.fasterxml.jackson.core', 'jackson-core', VERSION)]
)

jar_library(
  name='annotations',
  jars=[jar('com.fasterxml.jackson.core', 'jackson-annotations', VERSION)]
)

jar_library(
  name='databind',
  jars=[jar('com.fasterxml.jackson.core', 'jackson-databind', VERSION)]
)

jar_library(
  name='module-scala',
  jars=[scala_jar('com.fasterxml.jackson.module', 'jackson-module-scala', VERSION)]
)

jar_library(
  name='datatype-joda',
  jars=[jar('com.fasterxml.jackson.datatype', 'jackson-datatype-joda', VERSION)]
)

jar_library(
  name='dataformat-yaml',
  jars=[jar('com.fasterxml.jackson.dataformat', 'jackson-dataformat-yaml', VERSION)]
)